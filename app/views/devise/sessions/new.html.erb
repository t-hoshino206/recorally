<%= render "shared/second-header" %>

<%= form_with model: @user, url: user_session_path, class: "login-main", local: true do |f| %>
<div class="form-wrap">
  <h1 class="form-header">ユーザー情報入力</h1>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <ul class="form-group">
    <li class="form-string">
      <label class="form-subject">メールアドレス</label>
      <span class="indispensable">必須</span>
      <%= f.email_field :email, class:"input-string", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
    </li>
    <li class="form-string">
      <label class="form-subject">パスワード</label>
      <span class="indispensable">必須</span>
      <%= f.password_field :password, class:"input-string", id:"password", placeholder:"半角で入力" %>
    </li>
  </ul>

  <div class="btn-group">
    <%= f.submit "ログイン" ,class:"form-yellow-btn" %>
  </div>
</div>
<% end %>