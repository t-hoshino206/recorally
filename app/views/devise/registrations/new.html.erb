<%= render "shared/second-header" %>

<%= form_with model: @user, url: user_registration_path, local: true do |f| %>
<div class="form-wrap">
  <h1 class="form-header">アカウント情報入力</h1>
  <%= render 'shared/error_messages', model: f.object %>

  <ul class="form-group">
    <li class="form-string">
      <label class="form-subject">ニックネーム</label>
      <span class="indispensable">必須</span>
      <%= f.text_area :nickname, class:"input-string", id:"nickname", placeholder:"20文字以内で入力", maxlength:"20", autofocus: true %>
    </li>
    <li class="form-string">
      <label class="form-subject">メールアドレス</label>
      <span class="indispensable">必須</span>
      <%= f.email_field :email, class:"input-string", id:"email", placeholder:"PC・携帯どちらでも可" %>
    </li>
    <li class="form-string">
      <label class="form-subject">パスワード</label>
      <span class="indispensable">必須</span>
      <%= f.password_field :password, class:"input-string", id:"password", placeholder:"6文字以上の半角英数字" %>
      <p class="additional-text">※英字と数字の両方を含めて設定してください</p>
    </li>
    <li class="form-string">
      <label class="form-subject">パスワード(確認)</label>
      <span class="indispensable">必須</span>
      <%= f.password_field :password_confirmation, class:"input-string", id:"password-confirmation", placeholder:"確認のためもう1度入力して下さい" %>
    </li>
  </ul>

  <div class="btn-group">
    <p class="btn-text">「会員登録」のボタンを押すことにより、<span>利用規約</span><br>に同意したものとみなします。</p>
    <%= f.submit "アカウント登録" ,class:"form-yellow-btn" %>
  </div>
</div>
<% end %>