<%= render "shared/header" %>

<div class="main">
  <h2>新着スタンプラリー</h2>
  <ul class="cards-list">
    <% if @cards.exists? %>
      <% @cards.each do |card| %>
        <li>
          <dl class="card-detail">
            <dt class="user-avatar">
              <%= image_tag("default-avatar.png") %>
            </dt>
            <dd class="card-text">
              <%= link_to card_path(card.id) do %>
                <h3 class="user-nickname"><%= card.user.nickname %></h3>
                <p class="card-title"><%= card.title %></p>
              <% end %>
            <dd>
          </dl>
        </li>
      <% end %>
    <% else %>
      <li>
      </li>
    <% end %>
  </ul>
</div>

<%= render "shared/footer" %>